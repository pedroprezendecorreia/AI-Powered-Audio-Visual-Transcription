/* Tema azul escuro para o aplicativo de transcrição */

/* Estilo global */
QWidget {
    background-color: #1a1b26;
    color: #c0caf5;
    font-family: "Segoe UI", Arial, sans-serif;
    font-size: 10pt;
}

/* Janela principal */
QMainWindow {
    background-color: #1a1b26;
    border: none;
}

/* Barra de título e menus */
QMenuBar {
    background-color: #24283b;
    color: #c0caf5;
    border-bottom: 1px solid #414868;
}

QMenuBar::item:selected {
    background-color: #414868;
}

QMenu {
    background-color: #24283b;
    border: 1px solid #414868;
}

QMenu::item:selected {
    background-color: #414868;
}

/* Botões */
QPushButton {
    background-color: #3d59a1;
    color: #c0caf5;
    border: none;
    border-radius: 4px;
    padding: 6px 12px;
    min-width: 80px;
}

QPushButton:hover {
    background-color: #4d69b1;
}

QPushButton:pressed {
    background-color: #2d4991;
}

QPushButton:disabled {
    background-color: #2c3153;
    color: #565f89;
}

/* Campos de entrada */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #24283b;
    color: #c0caf5;
    border: 1px solid #414868;
    border-radius: 4px;
    padding: 4px;
}

QLineEdit:focus, QTextEdit:focus, QPlainTextEdit:focus {
    border: 1px solid #7aa2f7;
}

/* Listas e tabelas */
QListWidget, QTreeWidget, QTableWidget {
    background-color: #24283b;
    alternate-background-color: #292e42;
    border: 1px solid #414868;
    border-radius: 4px;
}

QListWidget::item:selected, QTreeWidget::item:selected, QTableWidget::item:selected {
    background-color: #3d59a1;
    color: #c0caf5;
}

QListWidget::item:hover, QTreeWidget::item:hover, QTableWidget::item:hover {
    background-color: #414868;
}

/* Barras de rolagem */
QScrollBar:vertical {
    background-color: #1a1b26;
    width: 12px;
    margin: 0px;
}

QScrollBar::handle:vertical {
    background-color: #414868;
    min-height: 20px;
    border-radius: 6px;
}

QScrollBar::handle:vertical:hover {
    background-color: #535d8c;
}

QScrollBar:horizontal {
    background-color: #1a1b26;
    height: 12px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background-color: #414868;
    min-width: 20px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #535d8c;
}

/* Abas */
QTabWidget::pane {
    border: 1px solid #414868;
    border-radius: 4px;
}

QTabBar::tab {
    background-color: #24283b;
    color: #c0caf5;
    border: 1px solid #414868;
    border-bottom: none;
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    padding: 6px 12px;
}

QTabBar::tab:selected {
    background-color: #3d59a1;
}

QTabBar::tab:hover:!selected {
    background-color: #414868;
}

/* Combobox */
QComboBox {
    background-color: #24283b;
    color: #c0caf5;
    border: 1px solid #414868;
    border-radius: 4px;
    padding: 4px;
    min-width: 6em;
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 15px;
    border-left: 1px solid #414868;
}

QComboBox QAbstractItemView {
    background-color: #24283b;
    border: 1px solid #414868;
    selection-background-color: #3d59a1;
}

/* Checkbox e Radio Button */
QCheckBox, QRadioButton {
    color: #c0caf5;
    spacing: 5px;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 16px;
    height: 16px;
}

QCheckBox::indicator:unchecked, QRadioButton::indicator:unchecked {
    background-color: #24283b;
    border: 1px solid #414868;
}

QCheckBox::indicator:checked, QRadioButton::indicator:checked {
    background-color: #3d59a1;
    border: 1px solid #414868;
}

/* Barra de progresso */
QProgressBar {
    background-color: #24283b;
    border: 1px solid #414868;
    border-radius: 4px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #3d59a1;
    width: 1px;
}

/* Separadores */
QFrame[frameShape="4"], QFrame[frameShape="5"] {
    color: #414868;
}

/* Grupos */
QGroupBox {
    border: 1px solid #414868;
    border-radius: 4px;
    margin-top: 1ex;
    padding-top: 10px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 5px;
}

/* Tooltips */
QToolTip {
    background-color: #24283b;
    color: #c0caf5;
    border: 1px solid #414868;
    border-radius: 4px;
}

/* Status bar */
QStatusBar {
    background-color: #24283b;
    color: #c0caf5;
    border-top: 1px solid #414868;
}

/* Spinbox */
QSpinBox, QDoubleSpinBox {
    background-color: #24283b;
    color: #c0caf5;
    border: 1px solid #414868;
    border-radius: 4px;
    padding: 4px;
}

QSpinBox::up-button, QDoubleSpinBox::up-button {
    subcontrol-origin: border;
    subcontrol-position: top right;
    width: 16px;
    border-left: 1px solid #414868;
    border-bottom: 1px solid #414868;
}

QSpinBox::down-button, QDoubleSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    width: 16px;
    border-left: 1px solid #414868;
    border-top: 1px solid #414868;
}

/* Sliders */
QSlider::groove:horizontal {
    border: none;
    height: 6px;
    background-color: #24283b;
    border-radius: 3px;
}

QSlider::handle:horizontal {
    background-color: #3d59a1;
    border: none;
    width: 16px;
    margin: -5px 0;
    border-radius: 8px;
}

QSlider::handle:horizontal:hover {
    background-color: #4d69b1;
}
